<h1>Carros</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Marca</th>
      <th>Modelo</th>
      <th>Ano</th>
    </tr>
  </thead>
  <tbody>
    <% @carros.each do |carro| %>
      <tr>
        <td><%= carro.id %></td>
        <td><%= carro.marca %></td>
        <td><%= carro.modelo %></td>
        <td><%= carro.ano %></td>
        <td>
          <!-- Bot達o para Mostrar -->
          <form action="<%= carro_path(carro) %>" method="get" style="display:inline;">
            <button type="submit" >Mostrar</button>
          </form>

          <!-- Bot達o para Editar -->
          <form action="<%= edit_carro_path(carro) %>" method="get" style="display:inline;">
            <button type="submit">Editar</button>
          </form>

          <!-- Bot達o para Excluir -->
          <form action="<%= carro_path(carro) %>" method="post" style="display:inline;">
            <input type="hidden" name="_method" value="delete">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <button type="submit" data-confirm="Tem certeza?">Excluir</button>
          </form>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<!-- Bot達o para Novo Carro -->
<form action="<%= new_carro_path %>" method="get" style="display:inline;">
  <button type="submit" >Novo Carro</button>
</form>