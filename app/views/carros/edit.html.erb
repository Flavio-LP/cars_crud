<h1 class="mb-4">Editar Carro</h1>

<%= form_with model: @carro, url: carro_path(@carro), method: :patch, class: "needs-validation" do |form| %>
  <div class="mb-3">
    <label for="marca" class="form-label">Marca:</label>
    <%= form.text_field :marca, class: "form-control", id: "marca" %>
  </div>

  <div class="mb-3">
    <label for="modelo" class="form-label">Modelo:</label>
    <%= form.text_field :modelo, class: "form-control", id: "modelo" %>
  </div>

  <div class="mb-3">
    <label for="ano" class="form-label">Ano:</label>
    <%= form.number_field :ano, class: "form-control", id: "ano" %>
  </div>

  <div class="d-flex gap-2">
    <%= form.submit "Atualizar Carro", class: "btn btn-primary" %>
    <%= link_to "Cancelar", carros_path, class: "btn btn-secondary" %>
  </div>
<% end %>